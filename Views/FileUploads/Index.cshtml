@model IEnumerable<Final_Retail.Models.FileUpload>

<h2>Uploaded Files</h2>

<table class="table">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model)
        {
            <tr>
                <td>@file.FileName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@file.RowKey">Details</a> |
                    <a asp-action="Edit" asp-route-id="@file.RowKey">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@file.RowKey">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Upload New File</a>
