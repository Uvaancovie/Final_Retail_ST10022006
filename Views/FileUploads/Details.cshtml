@model Final_Retail.Models.FileUpload

<h2>File Details</h2>

<div>
    <h4>@Model.FileName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            File Name
        </dt>
        <dd class="col-sm-10">
            @Model.FileName
        </dd>
        <dt class="col-sm-2">
            Content Type
        </dt>
        <dd class="col-sm-10">
            @Model.ContentType
        </dd>
        <dt class="col-sm-2">
            File URL
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.FileUrl">@Model.FileUrl</a>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.RowKey" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
