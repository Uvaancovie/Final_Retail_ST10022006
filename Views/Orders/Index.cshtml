@model IEnumerable<Final_Retail.Models.Order>

<h2>Orders</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Order</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Order Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.Quantity</td>
                <td>@item.OrderDate</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.RowKey" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.RowKey" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
